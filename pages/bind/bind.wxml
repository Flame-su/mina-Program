<!--pages/bind/bind.wxml-->
<text>绑定手机号</text>
<form bindsubmit='bindPhone'>
<view class="section">
<input placeholder='手机号' name="mobile" bindinput='mobileinput'></input>
</view>
<view class="section">
  <input placeholder="验证码" name="code"/>
  <button bindtap="bindValidCode">获取验证码</button>
</view>
<view class="section">
   <button form-type='submit'>绑定</button>
</view>
</form>